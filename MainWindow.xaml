<Window x:Class="BartsTOK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Barts TOK" Height="900" Width="900"
        Icon="bart.ico"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e"
        Foreground="#ffffff">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Stretch">
            <TextBlock Text="🤪 BARTS TOK 🤪" FontSize="24" FontWeight="Bold" 
                       Foreground="#FFD700" Margin="0,0,0,20" TextAlignment="Center"/>

            <GroupBox Header="Virtuelle Tastatur" Foreground="#FFD700" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <RadioButton x:Name="rbSendInput" Content="SendInput Keyboard (Standard)" 
                                 IsChecked="True" Foreground="white" Margin="0,0,0,8"/>
                    <RadioButton x:Name="rbSendKeys" Content="SendKeys Keyboard" 
                                 Foreground="white" Margin="0,0,0,8"/>
                    <RadioButton x:Name="rbKeybdEvent" Content="KeybdEvent Keyboard (Alt)" 
                                 Foreground="white"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Verhalten" Foreground="#FFD700" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <RadioButton x:Name="rbSequential" Content="Zeilen nacheinander" 
                                 IsChecked="True" Foreground="white" Margin="0,0,0,8"/>
                    <RadioButton x:Name="rbRandom" Content="Zufällige Zeile" 
                                 Foreground="white" Margin="0,0,0,8"/>
                    <RadioButton x:Name="rbSequentialStop" Content="Nacheinander und stoppen" 
                                 Foreground="white" Margin="0,0,0,8"/>
                    <CheckBox x:Name="cbAutoNewline" Content="Auto Enter nach jeder Zeile" 
                              IsChecked="True" Foreground="white" Margin="0,8,0,0"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Tippgeschwindigkeit" Foreground="#FFD700" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Label Content="Pause zwischen Zeilen (Sek):" Width="200" Foreground="white"/>
                        <TextBox x:Name="txtLinePause" Width="80" Text="5" TextAlignment="Center" 
                                 Background="#333333" Foreground="white"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Pause zwischen Zeichen (Sek):" Width="200" Foreground="white"/>
                        <TextBox x:Name="txtCharPause" Width="80" Text="0.01" TextAlignment="Center" 
                                 Background="#333333" Foreground="white"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <Label Content="Text Eingaben (jede Zeile wird separat behandelt):" 
                   Foreground="#FFD700" FontWeight="Bold"/>
            <TextBox x:Name="txtInput" Height="120" Margin="0,5,0,15" 
                     TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True" Background="#333333" Foreground="white" Padding="10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,15" Height="50">
                <Button x:Name="btnStart" Content="▶ START (F1)" Width="220" 
                        Background="#4CAF50" Foreground="White" FontSize="14" 
                        FontWeight="Bold" Click="BtnStart_Click" Margin="0,0,10,0"/>
                <Button x:Name="btnStop" Content="⏹ STOP (F2)" Width="220" 
                        Background="#F44336" Foreground="White" FontSize="14" 
                        FontWeight="Bold" Click="BtnStop_Click" IsEnabled="False" Margin="0,0,10,0"/>
                <Button x:Name="btnTray" Content="📌 Tray" Width="120" 
                        Background="#FF9800" Foreground="White" FontSize="12" Click="BtnTray_Click"/>
            </StackPanel>

            <Label Content="Status:" Foreground="#FFD700" FontWeight="Bold"/>
            <Label x:Name="lblStatus" Content="Status: Gestoppt ⏹" Height="35" 
                   Background="#333333" BorderBrush="#FFD700" BorderThickness="1" 
                   Foreground="white" Padding="10"/>

            <Label Content="Log:" Foreground="#FFD700" FontWeight="Bold" Margin="0,15,0,5"/>
            <ListBox x:Name="logBox" Height="120" Background="#333333" 
                     BorderBrush="#FFD700" BorderThickness="1" Foreground="#00FF00"/>
        </StackPanel>
    </Grid>
</Window>