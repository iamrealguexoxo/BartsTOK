<Window x:Class="BartsTOK.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Über BartsTOK" Height="360" Width="420" WindowStartupLocation="CenterOwner"
        Background="#1e1e1e" Foreground="White">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
            <TextBlock Text="BartsTOK" FontSize="22" FontWeight="Bold"/>
            <TextBlock Text="  •  v1 Pre-release" Foreground="#FFD700" Margin="6,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Image x:Name="imgBart" Width="96" Height="96" Stretch="Uniform" Margin="0,0,0,8"/>
            <TextBlock Text="made with ❤️ by iamguexoxo" FontSize="14" HorizontalAlignment="Center"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,6,0,0">
                <Hyperlink NavigateUri="https://instagram.com/iamgue" RequestNavigate="Hyperlink_RequestNavigate">instagram.com/iamgue</Hyperlink>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Schließen" Width="100" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
